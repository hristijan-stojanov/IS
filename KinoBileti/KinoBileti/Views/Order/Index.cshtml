@{
}

    
    
<div class="container ">
    

    @if (Model.Count == 0)
    {
        <div>
            <p>No active Products</p>
        </div>
    }
    else
    {
        
        @foreach(var item in Model)
        {


            <div class=" row justify-content-center">
                <div class="row card" style="width: 35rem; ">
                    <div class="card-body">
                        <h5 class="card-title">Order</h5>
                        <p class="card-text"></p>
                        <ul>
                            @foreach (var bilet in item.Bilets)
                            {
                                <li>@bilet.BIlet.ime</li>
                            }
                        </ul>
                    </div>
                    <div class="row m-4">
                        <a asp-controller="Order" asp-action="GetFaktura" asp-route-id="@item.Id" class="btn btn-info">Faktura</a>
                    </div>
                </div>
            </div>
            <br />
        }
    }

</div>
    